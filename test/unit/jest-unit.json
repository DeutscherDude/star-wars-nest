{
  "preset": "ts-jest",
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".unit.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "rootDir": "../../",
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "@common/*/(.*)$": "<rootDir>/src/common/$1",
    "@planets/*(/.*)$": ["<rootDir>/src/planets/$1"],
    "@swapi/*/(.*)$": ["<rootDir>/src/swapi/$1"],
    "@env/*/(.*)$": "<rootDir>/src/config/$1"
  }
}
